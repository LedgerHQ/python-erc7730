{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "blockchainName": {
        "type": "string"
      },
      "chainId": {
        "type": "integer"
      },
      "contracts": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "address": {
                "type": "string"
              },
              "contractName": {
                "type": "string"
              },
              "messages": {
                "type": "array",
                "items": [
                  {
                    "type": "object",
                    "properties": {
                      "mapper": {
                        "type": "object",
                        "properties": {
                          "fields": {
                            "type": "array",
                            "items": [
                              {
                                "type": "object",
                                "properties": {
                                  "label": {
                                    "type": "string"
                                  },
                                  "path": {
                                    "type": "string"
                                  },
                                  "format": {
                                    "type": "string"
                                  },
                                  "assetPath": {
                                    "type": "string"
                                  }
                                },
                                "required": [
                                  "label",
                                  "path"
                                ]
                              }
                            ]
                          },
                          "label": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "fields",
                          "label"
                        ]
                      },
                      "schema":  {
                        "type": "object",
                        "description": "Dictionary with EIP712Domain as a mandatory key",
                        "additionalProperties": {
                            "type": "array",
                            "items": [
                              {
                                "type": "object",
                                "properties": {
                                  "name": {
                                    "type": "string"
                                  },
                                  "type": {
                                    "type": "string"
                                  }
                                },
                                "required": [
                                  "name",
                                  "type"
                                ]
                              }
                            ]
                          }
                        }
                    },
                    "required": [
                      "mapper",
                      "schema"
                    ]
                  }
                ]
              }
            },
            "required": [
              "address",
              "contractName",
              "messages"
            ]
          }
        ]
      },
      "name": {
        "type": "string"
      }
    },
    "required": [
      "blockchainName",
      "chainId",
      "contracts",
      "name"
    ]
  }
